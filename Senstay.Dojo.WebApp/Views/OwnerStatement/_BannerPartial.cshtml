@model Senstay.Dojo.Models.View.OwnerStatementViewModel

<div class="owner-banner-view">
    <div class="statement-banner" style="height:105px;">
        <div class="statement-title pull-left">
            <div class="statement-title">OWNER STATEMENT | @Model.StatementMonth.ToString("MMMM yyyy")</div>
            <div style="font-size:14px;font-weight:normal;margin-top:5px;">
                <div id="summary-link">@Model.OwnerName</div>
                <div>@Model.PropertyNameWithProduct</div>
            </div>
        </div>
        <div class="pull-right right">
            <div>
                <div class="statement-logo"><img src="~/Content/images/senstay_logo.png" /></div>
                <div style="margin-top:5px;">SenStay, Inc</div>
                <div>San Diego, CA 92101</div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
</div>
