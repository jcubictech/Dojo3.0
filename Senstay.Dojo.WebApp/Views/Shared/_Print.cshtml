@{
    ViewBag.Release = System.Configuration.ConfigurationManager.AppSettings["ReleaseVersion"];
    ViewBag.Release = string.IsNullOrEmpty(ViewBag.Release) ? ViewBag.Release : "2017";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=deviss-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="app-print-page" style="position:absolute;top:0px;">
        @RenderBody()
    </div>

    <link rel="Stylesheet" href="@Href("~/content/app/site.css?r=" + ViewBag.Release)" />

    <style type="text/css">
        html, body { 
            height: auto;
        }
        .summary-title {
            background-color: #e48c21 !important;
        }
        @@media print {
            body {
                -webkit-print-color-adjust: exact;
            }
            a[href]:after {
                content: none !important;
            }
        }
        .owner-summary-view{
            width:1520px !important;
        }
        .statement-col-3-1 {
            width:115px !important;
        }
        .statement-col-4-1 {
            width:145px !important;
        }
        .statement-col-7-1 {
            width:150px !important;
        }
        .statement-col-8-1 {
            width:150px !important;
        }
        .statement-col-11-1 {
            width:200px !important;
        }
        .statement-col-11 {
            width:120px !important;
        }
    </style>

    @RenderSection("styles", required: false)
    @RenderSection("scripts", required: false)

    @if (IsSectionDefined("CustomFormStyle"))
    {
        @RenderSection("CustomFormStyle");
    }
</body>
</html>