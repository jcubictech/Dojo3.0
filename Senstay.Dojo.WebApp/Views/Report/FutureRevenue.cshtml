@{
    ViewBag.AppName = "SenStay Dojo App";
    ViewBag.Title = "Future Revenue Report";
    ViewBag.PageHint = "report";
}

<div class="report-page">
    <!-- page title -->
    <div class="report-h2"><span id="reportTitle">@ViewBag.Title</span> <span id="dataCount"></span></div>

    <!-- system-wdie alert -->
    <div id="dojo-alert" class="alert-container"></div>

    <!-- future earnings charts - generated by client side scripts -->
    <div id="futureRevenueChart" class="report-chart"></div>

    <!-- future earnings data grid - generated by client side scripts -->
    <div id="FutureEarningReport" class="report-data-grid">
        <div id="FutureRevenueReportGrid" class="report-grid @ViewBag.AdminClass @ViewBag.EditClass"></div>
    </div>

    <!-- slding out alert messaging -->
    <div id="actionAlert" class="alert-container"></div>
</div>

@section CustomFormStyle
{
    <style type="text/css">
        body {overflow:hidden;}
        .report-data-grid {width:1600px;}
        #reportTitle { padding-right:20px;}
        #dataCount {font-size:20px;}
    </style>
}

@section styles
{
    <link rel="Stylesheet" href="@Href("~/content/app/report.css")" />
}

@section scripts
{
    @Scripts.Render("~/Scripts/app/futureRevenue.js?r=" + ViewBag.Release)

    <script>
        $(document).ready(function () {
            DojoWeb.FutureRevenue.init('FutureRevenueReportGrid');
        });
    </script>
}
